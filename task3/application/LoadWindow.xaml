<Window x:Class="application.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:application"
        mc:Ignorable="d"
        Title="Load Experiment" Height="160" Width="320" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid Background="#FFFFFF">
        <ListBox x:Name="experiments_list_box" MouseDoubleClick="LoadExperiment" VerticalAlignment="Top" HorizontalAlignment="Left" Width="320" Height="70"/>
        <Button x:Name="load_button" Content="Load" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Height="32" Margin="10,76,0,0" Click="LoadExperiment" Background="#FF1CCC39"/>
        <Button x:Name="cancel_button" Content="Cancel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Height="32" Margin="96,76,0,0" Click="CancelLoadExperiment" Background="#FFE80000"/>
    </Grid>
</Window>